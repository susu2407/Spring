<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ch05.mapper.User1Mapper">
    <!-- 나중에 myBatis 데이터베이스 경로를 작성할 것이다 -->

    <insert id="insertUser1">
        INSERT INTO USER1 VALUES (#{user_id},#{name},#{birth},#{age})
    </insert>

    <select id="selectAllUser1" resultType="kr.co.ch05.dto.User1DTO">
        select * from USER1
    </select>
    <select id="selectUser1" resultType="kr.co.ch05.dto.User1DTO">
        select * from USER1 WHERE user_id=#{user_id}
    </select>

    <update id="updateUser1">
        UPDATE USER1 SET
            name=#{name},
            birth=#{birth},
            age=#{age}
        WHERE
        user_id=#{user_id}
    </update>

    <delete id="deleteUser1">
        DELETE FROM USER1 WHERE user_id=#{user_id}
    </delete>
</mapper>
